<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_ocr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Food Label"
        android:textSize="20sp"
        android:fontFamily="@font/coolvetica_rg"
        android:paddingBottom="16dp" />
    <ImageView
        android:id="@+id/img_food_label"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/baseline_photo_camera_back_24"
        android:contentDescription="Food Label" />

    <Button
        android:id="@+id/btn_scan_ocr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Label"
        android:fontFamily="@font/coolvetica_rg"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/greenPrimer"/>
    <TextView
        android:id="@+id/tv_nutrition_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Information"
        android:paddingTop="16dp"
        android:visibility="gone" />
</LinearLayout>
