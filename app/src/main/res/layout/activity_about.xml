<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F7F3F9"
    android:gravity="center">

    <!-- Logo atau Gambar Aplikasi -->
    <ImageView
        android:id="@+id/img_logo_nutrisia"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@mipmap/nutrisia"
        android:contentDescription="Logo Nutrisia"
        android:layout_marginBottom="24dp" />

    <!-- Judul Halaman About Us -->
    <TextView
        android:id="@+id/tv_about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrisia"
        android:textStyle="bold"
        android:textSize="26sp"
        android:fontFamily="@font/coolvetica_rg"
        android:textColor="@color/black"
        android:layout_marginBottom="1dp" />

    <!-- Deskripsi Aplikasi -->
    <TextView
        android:id="@+id/tv_about_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi NUTRISIA (Nutrisi Terpantau Sehat Ideal dan Akurat) membantu mencegah obesitas dengan memindai label nutrisi makanan melalui Smart OCR. Dilengkapi rekomendasi diet sesuai data fisik dan fitur penghitungan kalori, NUTRISIA mendukung keputusan diet yang lebih sehat."
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="2dp"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Nama Tim -->
    <TextView
        android:id="@+id/tv_our_team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Team"
        android:textSize="20sp"
        android:fontFamily="@font/coolvetica_rg"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <!-- Daftar Nama Tim -->
    <TextView
        android:id="@+id/tv_team_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Ahmad Fadhil Ikram\n• Adinda Khusnul Khotimah\n• Paskal Arvito Weni\n• Sri Husna Anggraeni"
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:lineSpacingExtra="8dp" />

    <!-- Button untuk informasi lebih lanjut atau kontak -->
    <Button
        android:id="@+id/btn_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:fontFamily="@font/coolvetica_rg"
        android:backgroundTint="#7FB486"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:padding="12dp" />

</LinearLayout>